<resources>

    <style name="MaterialCardRoundedTop" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="card_title">
        <item name="android:textAppearance">@style/Headline6</item>
    </style>

    <style name="card_subtitle">
        <item name="android:textAppearance">@style/Body1</item>
    </style>

    <style name="card_body">
        <item name="android:textAppearance">@style/Body2</item>
    </style>

</resources>
